<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MainAppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.FullScreen" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="ToolbarPopupTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>
    </style>

    <style name="OverflowMenu" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
        <item name="android:layout_marginRight">14dp</item>
    </style>

    <style name="codeEdit" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/grey_dark</item>
        <item name="colorControlActivated">@color/grey</item>
        <item name="colorControlHighlight">@color/black</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize" tools:ignore="SpUsage">16dp</item>
    </style>

    <style name="SuppleInfoImgText">
         <item name="android:textSize">25sp</item>
        <item name="android:background">@color/half_white</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:gravity">center</item>
    </style>



    <style name="CheckHeaderStrCommonText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CheckHeaderDataCommonText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ItemDataCommonText">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DeviceCommonText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#EFA02C</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="DeviceDangerText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/qq_red_dark</item>
    </style>

</resources>